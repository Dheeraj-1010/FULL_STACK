<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Grid Examples Toggle</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: Arial, sans-serif;
      background: #222;
      color: white;
    }
    .tabs {
      display: flex;
      justify-content: center;
      background: #444;
      padding: 1rem;
      gap: 1rem;
    }
    button {
      padding: 0.6rem 1rem;
      border: none;
      border-radius: 5px;
      background: #666;
      color: white;
      font-size: 1rem;
      cursor: pointer;
    }
    button.active {
      background: #0077ff;
    }
    section {
      display: none;
      padding: 1rem;
    }
    section.active {
      display: block;
    }

    /* ---------- First Example: Grid Template Areas ---------- */
    .container-areas {
      display: grid;
      gap: 1rem;
      background-color: rgb(79, 75, 75);
      padding: 2rem;
      grid-template-areas: 
        "header header header"
        "sidebar content1 content1"
        "sidebar content2 content3"
        "footer footer footer";
    }
    .items {
      background-color: rgb(82, 82, 184);
      border: 2px solid black;
      padding: 1rem;
      text-align: center;
    }
    #header { grid-area: header; }
    #sidebar { grid-area: sidebar; }
    #content1 { grid-area: content1; }
    #content2 { grid-area: content2; }
    #content3 { grid-area: content3; }
    #footer { grid-area: footer; }

    /* ---------- Second Example: Responsive Grid ---------- */
    .container-responsive {
      display: grid;
      gap: 1rem;
      padding: 2rem;
      background-color: rgb(71, 65, 65);
      grid-template-columns: repeat(auto-fit, minmax(200px, 500px));
    }
    .item {
      padding: 1rem;
      border: 3px solid black;
      background-color: rgb(85, 85, 208);
      text-align: center;
      font-size: 1.2rem;
    }
  </style>
</head>
<body>

  <!-- Tabs -->
  <div class="tabs">
    <button class="tab-btn active" data-target="areas">Grid Template Areas</button>
    <button class="tab-btn" data-target="responsive">Responsive Grid</button>
  </div>

  <!-- First Example -->
  <section id="areas" class="active">
    <div class="container-areas">
      <div class="items" id="header">Header</div>
      <div class="items" id="sidebar">Sidebar</div>
      <div class="items" id="content1">Content1</div>
      <div class="items" id="content2">Content2</div>
      <div class="items" id="content3">Content3</div>
      <div class="items" id="footer">Footer</div>
    </div>
  </section>

  <!-- Second Example -->
  <section id="responsive">
    <div class="container-responsive">
      <div class="item">A</div>
      <div class="item">B</div>
      <div class="item">C</div>
      <div class="item">D</div>
      <div class="item">E</div>
      <div class="item">F</div>
      <div class="item">G</div>
      <div class="item">H</div>
      <div class="item">I</div>
      <div class="item">J</div>
      <div class="item">K</div>
    </div>
  </section>

  <script>
    const buttons = document.querySelectorAll(".tab-btn");
    const sections = document.querySelectorAll("section");

    buttons.forEach(btn => {
      btn.addEventListener("click", () => {
        // Remove active classes
        buttons.forEach(b => b.classList.remove("active"));
        sections.forEach(s => s.classList.remove("active"));

        // Add active to clicked button + target section
        btn.classList.add("active");
        document.getElementById(btn.dataset.target).classList.add("active");
      });
    });
  </script>

</body>
</html>
