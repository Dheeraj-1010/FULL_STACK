    /* ---------- First Example: Grid Template Areas ---------- */
    .container-areas {
      width: 100%;
      min-height: 60vh;
      display: grid;
      gap: 1rem;
      background-color: rgb(79, 75, 75);
      padding: 2rem;
      grid-template-areas: 
        "header header header"
        "sidebar content1 content1"
        "sidebar content2 content3"
        "footer footer footer";
    }
    .items {
      background-color: rgb(82, 82, 184);
      border: 2px solid black;
      padding: 1rem;
      color: white;
      text-align: center;
    }
    #header { grid-area: header; }
    #sidebar { grid-area: sidebar; }
    #content1 { grid-area: content1; }
    #content2 { grid-area: content2; }
    #content3 { grid-area: content3; }
    #footer { grid-area: footer; }

    /* ---------- Second Example: Responsive Grid ---------- */
    .container-responsive {
      width: 100%;
      min-height: 60vh;
      padding: 2rem;
      display: grid;
      gap: 1rem;
      background-color: rgb(71, 65, 65);
      grid-template-columns: repeat(auto-fit, minmax(200px, 500px));
    }
    .item {
      padding: 1rem;
      border: 3px solid black;
      background-color: rgb(85, 85, 208);
      color: white;
      text-align: center;
      font-size: 1.2rem;
    }
